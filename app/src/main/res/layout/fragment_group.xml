<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_name"
            android:textSize="21sp"
            android:text="Group name"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1" xmlns:android="http://schemas.android.com/apk/res/android">
        <TableRow>
            <Button
                    android:layout_columnWeight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bills"
                    android:text="Show debts" />
            <Button
                    android:layout_columnWeight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pay"
                    android:text="Pay" />
        </TableRow>

        <TableRow>
            <Button
                    android:layout_columnWeight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit"
                    android:text="Edit" />

            <Button
                    android:layout_columnWeight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete"
                    android:text="Delete" />
        </TableRow>
    </TableLayout>
    <View android:layout_width="match_parent" android:layout_height="2px" android:background="@android:color/darker_gray"/>

</LinearLayout>


